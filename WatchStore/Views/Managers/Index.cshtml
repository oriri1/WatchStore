@model IEnumerable<WatchStore.Models.Manager>

@{
    ViewBag.Title = "Managers";
}


<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title | Watch Store</title>
    <link rel="icon" href="https://png.pngtree.com/png-vector/20191021/ourlarge/pngtree-w-letter-logo-design-png-image_1770441.jpg" type="image/x-icon">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
</head>

<body style="margin-top:8rem;">
    <h2>Managers</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ManagerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManagerPassword)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ManagerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManagerPassword)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ManagerID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ManagerID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ManagerID })
                </td>
            </tr>
        }

    </table>

</body>
