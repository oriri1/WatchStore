<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title | Watch Store</title>
    <link rel="icon" href="https://png.pngtree.com/png-vector/20191021/ourlarge/pngtree-w-letter-logo-design-png-image_1770441.jpg" type="image/x-icon">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    @RenderSection("scripts", required: false)
    <style>
        body {
            font: 400 15px/1.8 Lato, sans-serif;
            background: url("https://obsidianchronicleslarp.com.au/wp-content/uploads/site-background.jpg") no-repeat center center fixed;
            height: 100%;
            background-size: cover;
            color: white;
        }

        h3, h4 {
            margin: 10px 0 30px 0;
            letter-spacing: 10px;
            font-size: 20px;
            color: white;
        }

        .container {
            padding: 80px 120px;
            color: white;
        }

        .person {
            border: 10px solid transparent;
            margin-bottom: 25px;
            width: 80%;
            height: 80%;
            opacity: 0.7;
        }

            .person:hover {
                border-color: #f1f1f1;
            }

        .carousel-inner img {
            -webkit-filter: grayscale(90%);
            filter: grayscale(90%); /* make all photos black and white */
            width: 100%; /* Set width to 100% */
            margin: auto;
        }

        .carousel-caption h3 {
            color: #fff !important;
        }

        .bg-1 {
            background: #2d2d30;
            color: #bdbdbd;
        }

            .bg-1 h3 {
                color: white;
            }

            .bg-1 p {
                font-style: italic;
            }

        .list-group-item:first-child {
            border-top-right-radius: 0;
            border-top-left-radius: 0;
        }

        .list-group-item:last-child {
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .thumbnail {
            padding: 0 0 15px 0;
            border: none;
            border-radius: 0;
        }

            .thumbnail p {
                margin-top: 15px;
                color: #555;
            }

        .btn {
            padding: 10px 20px;
            background-color: #333;
            color: #f1f1f1;
            border-radius: 0;
            transition: .2s;
        }

            .btn:hover, .btn:focus {
                border: 1px solid #333;
                background-color: #fff;
                color: #000;
            }

        .modal-header, h4, .close {
            background-color: #333;
            color: #fff !important;
            text-align: center;
            font-size: 30px;
        }

        .modal-header, .modal-body {
            padding: 40px 50px;
        }

        .nav-tabs li a {
            color: #777;
        }

        #googleMap {
            width: 100%;
            height: 400px;
            -webkit-filter: grayscale(100%);
            filter: grayscale(100%);
        }

        .navbar {
            font-family: Montserrat, sans-serif;
            margin-bottom: 0;
            background-color: #2d2d30;
            border: 0;
            font-size: 11px !important;
            letter-spacing: 4px;
            opacity: 0.9;
        }

            .navbar li a, .navbar .navbar-brand {
                color: #d5d5d5 !important;
            }

        .navbar-nav li a:hover {
            color: #fff !important;
        }

        .navbar-nav li.active a {
            color: #fff !important;
            background-color: #29292c !important;
        }

        .navbar-default .navbar-toggle {
            border-color: transparent;
        }

        .open .dropdown-toggle {
            color: #fff;
            background-color: #555 !important;
        }

        .dropdown-menu li a {
            color: #000 !important;
        }

            .dropdown-menu li a:hover {
                background-color: red !important;
            }

        footer {
            background-color: #2d2d30;
            color: #f5f5f5;
            padding: 32px;
        }

            footer a {
                color: #f5f5f5;
            }

                footer a:hover {
                    color: #777;
                    text-decoration: none;
                }

        .form-control {
            border-radius: 0;
        }

        textarea {
            resize: none;
        }
    </style>
</head>
<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="50">
    @RenderBody()

    <!-- NavBar -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <ul class="nav navbar-nav navbar-static-top">
                <img id="icon" src="https://png.pngtree.com/png-vector/20191021/ourlarge/pngtree-w-letter-logo-design-png-image_1770441.jpg" style="margin-top:10px;margin-right:7px; width:30px; height:30px;">
            </ul>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("WATCH STORE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    @if (ViewBag.Title.Equals("Home"))
                    {
                        <li><a href="#myPage">HOME</a></li>
                        <li><a href="#team">ABOUT</a></li>
                        <li><a href="#brand">BRANDS</a></li>
                        <li><a href="#contact">CONTACT</a></li>
                        <li><a href="#gallery">GALLERY</a></li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("HOME", "Index", "Home")</li>
                    }
                    @if (TempData["Role"] != null)
                    {
                        if (TempData["Role"].Equals("Admin"))
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#caret">
                                    MORE
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">

                                    <li>@Html.ActionLink("CLIENTS", "Index", "Clients")</li>
                                    <li>@Html.ActionLink("WATCHES", "Index", "Watches")</li>
                                    <li>@Html.ActionLink("DEALS", "Index", "Deals")</li>
                                    <li>@Html.ActionLink("STATISTICS", "Statistics", "Deals")</li>

                                </ul>
                            </li>
                        }

                        TempData.Keep();
                    }

                    @if (TempData["Role"] != null)
                    {
                        <li>@Html.ActionLink("LOGOUT", "Logout", "Home")</li>

                        if (TempData["Role"].ToString().Equals("Admin"))
                        {
                            <li>@Html.ActionLink(@TempData["name"].ToString().ToUpper(), "Admin", "Managers")</li>
                            <img id="usr" src="@TempData["img"].ToString()" style="margin-top:10px; width:30px; height:30px;" class="profile-image img-circle">
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("Cart", "Deals")">
                                    <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                                    @TempData["numOfProducts"].ToString()
                                </a>
                            </li>
                            <li>@Html.ActionLink(@TempData["name"].ToString().ToUpper(), "Account", "Clients")</li>
                            <img id="usr" src="https://cdn1.iconfinder.com/data/icons/free-98-icons/32/user-512.png" style="margin-top:10px; width:30px; height:30px;" class="profile-image img-circle">
                        }
                        TempData.Keep();
                    }

                    else
                    {
                        <li data-toggle="modal" data-target="#myModal"><a href="#myPage">LOGIN</a></li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <!-- Footer -->
    <footer id="footer" class="text-center">
        <a class="up-arrow" href="#myPage" data-toggle="tooltip" title="TO TOP">
            <p>
                Copyright &copy; @DateTime.Now.Year Watch Store
                <div class="fb-page" data-href="https://www.facebook.com/WatchStoreMY/" data-width="380" data-hide-cover="false" data-show-facepile="false"> </div>
                <div id="fb-root"></div><script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v7.0"></script>
            </p>
            <span class="glyphicon glyphicon-chevron-up"></span>
        </a>
    </footer>

    <script>
        $(document).ready(function () {
            // Initialize Tooltip
            $('[data-toggle="tooltip"]').tooltip();

            // Add smooth scrolling to all links in navbar + footer link
            $(".navbar a, footer a[href='#myPage']").on('click', function (event) {

                // Make sure this.hash has a value before overriding default behavior
                if (this.hash !== "") {

                    // Prevent default anchor click behavior
                    event.preventDefault();

                    // Store hash
                    var hash = this.hash;

                    // Using jQuery's animate() method to add smooth page scroll
                    // The optional number (900) specifies the number of milliseconds it takes to scroll to the specified area
                    $('html, body').animate({
                        scrollTop: $(hash).offset().top
                    }, 900, function () {

                        // Add hash (#) to URL when done scrolling (default click behavior)
                        window.location.hash = hash;
                    });
                } // End if
            });
        })
    </script>
</body>
</html>

@if (ViewBag.Title.Equals("Index"))
{
    <style>
        #footer {
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
}

